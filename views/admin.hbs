<h6><i class="fas fa-user-lock" style="margin-right: 5px"></i>Admin</h6>
<h3>Welcome {{name}} </h3>
<p>YOUR JOBS</p>
{{#if jobs}}
<table class="striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each jobs}}
        <tr>
            <td><a href="/jobs/{{_id}}">{{name}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/jobs/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>
                
                <form action="/jobs/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not added any job yet</p>
{{/if}}