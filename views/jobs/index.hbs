<h1>JOBS</h1>
<div class="row">
    {{#each jobs}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-content center-align">
                <h5>{{stripTags (truncate name 12)}}</h5>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/jobs/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/jobs/{{_id}}" class="btn grey">See Job Description</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No jobs to display</p>
    {{/each}}
</div>