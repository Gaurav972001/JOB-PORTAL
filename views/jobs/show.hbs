  
<div class="row">
    <div class="col s12 m8">
        <h3>{{job.name}}</h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{job.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{job.user.displayName}}</span>
                <img src="{{job.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/jobs/user/{{job.user._id}}">More From {{job.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>